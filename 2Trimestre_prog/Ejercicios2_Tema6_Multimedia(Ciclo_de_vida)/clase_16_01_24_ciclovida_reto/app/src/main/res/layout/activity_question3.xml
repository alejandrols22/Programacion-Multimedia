<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvPregunta3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pregunta 3: ¿Cuál es el elemento químico con el símbolo 'O'?"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnRespuestaCorrecta3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oxígeno"
        android:onClick="comprobarRespuesta"
        android:layout_below="@id/tvPregunta3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btnRespuestaIncorrecta3_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oro"
        android:onClick="comprobarRespuesta"
        android:layout_below="@id/btnRespuestaCorrecta3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnRespuestaIncorrecta3_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Osmio"
        android:onClick="comprobarRespuesta"
        android:layout_below="@id/btnRespuestaIncorrecta3_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />
</RelativeLayout>
