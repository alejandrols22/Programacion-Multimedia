<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ejercicio.MainActivity">

    <Button
        android:id="@+id/button_play_video1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reproducir Video 1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"/>

    <Button
        android:id="@+id/button_play_video2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reproducir Video 2"
        app:layout_constraintTop_toBottomOf="@id/button_play_video1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"/>

    <Button
        android:id="@+id/button_play_video3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reproducir Video 3"
        app:layout_constraintTop_toBottomOf="@id/button_play_video2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"/>

    <Button
        android:id="@+id/button_play_video4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reproducir Video 4"
        app:layout_constraintTop_toBottomOf="@id/button_play_video3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"/>

    <VideoView
        android:id="@+id/video_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/button_play_video4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
