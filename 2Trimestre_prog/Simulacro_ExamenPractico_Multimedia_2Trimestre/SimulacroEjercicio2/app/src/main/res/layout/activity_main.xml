<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ejercicio.MainActivity">

    <Button
        android:id="@+id/btnVideo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver Video 1"
        android:onClick="openVideoActivity" />

    <Button
        android:id="@+id/btnVideo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver Video 2"
        android:onClick="openVideoActivity" />

    <Button
        android:id="@+id/btnVideo3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver Video 3"
        android:onClick="openVideoActivity" />

</LinearLayout>

