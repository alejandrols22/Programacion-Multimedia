<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ejercicios.Ejercicio1">


    <TextView
        android:id="@+id/texto_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="CALCULADORA"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <TextView
        android:id="@+id/texto_operador1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="OPERADOR 1"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/texto_nombre"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etOperador1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="16dp"
        android:singleLine="true"
        android:hint="Introduce tu primer numero"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/texto_operador1"
        app:layout_constraintBottom_toTopOf="@+id/texto_operador2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/texto_operador2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="OPERADOR 2"
        android:textColor="@color/black"
        android:textSize="20sp"

        app:layout_constraintTop_toBottomOf="@id/etOperador1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etOperador2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="16dp"
        android:singleLine="true"
        android:hint="Introduce tu segundo numero"
        android:textColor="@android:color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/texto_operador2"
        app:layout_constraintBottom_toTopOf="@+id/btnSumar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnSumar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sumar"
        android:layout_marginTop="60dp"
        android:textSize="9sp"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnRestar"
        app:layout_constraintTop_toBottomOf="@id/etOperador2"/>

    <Button
        android:id="@+id/btnRestar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Restar"
        android:layout_marginTop="60dp"
        android:textSize="9sp"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintLeft_toRightOf="@+id/btnSumar"
        app:layout_constraintRight_toLeftOf="@+id/btnMultiplicar"
        app:layout_constraintTop_toBottomOf="@id/etOperador2"/>

    <Button
        android:id="@+id/btnMultiplicar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Multiplicar"
        android:textSize="9sp"
        android:layout_marginTop="60dp"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintLeft_toRightOf="@+id/btnRestar"
        app:layout_constraintRight_toLeftOf="@+id/btnDividir"
        app:layout_constraintTop_toBottomOf="@id/etOperador2"/>

    <Button
        android:id="@+id/btnDividir"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dividir"
        android:layout_marginTop="60dp"
        android:textSize="9sp"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintLeft_toRightOf="@+id/btnMultiplicar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etOperador2"/>
</androidx.constraintlayout.widget.ConstraintLayout>