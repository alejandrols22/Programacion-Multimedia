<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <Button
        android:id="@+id/buttonEjercicio1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ejercicio1"
        android:background="@drawable/button_background"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/buttonEjercicio2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ejercicio2"
        android:background="@drawable/button_background"
        android:layout_below="@id/buttonEjercicio1"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/buttonEjercicio3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ejercicio3"

        android:layout_below="@id/buttonEjercicio2"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_background"
        android:textColor="@android:color/white"/>
</RelativeLayout>
